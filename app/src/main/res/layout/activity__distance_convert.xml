<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_DistanceRootLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dino.lv2.activity_DistanceConvert"
    android:background="@color/colorBlue">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="DISTANCE CONVERSION"
        android:textColor="@color/colorWhite"
        />
    <TextView
        android:id="@+id/tv_FromDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FROM"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="160dp"
        />

    <Spinner
        android:id="@+id/spinner_DistanceFrom"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_below="@id/tv_FromDistance"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="100dp">
    </Spinner>

    <EditText
        android:id="@+id/et_DistanceValue"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:hint="Enter value..."
        android:layout_below="@id/spinner_DistanceFrom"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tv_ToDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TO"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="170dp"
        android:layout_below="@id/et_DistanceValue"
        />

    <Spinner
        android:id="@+id/spinner_DistanceTo"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_below="@id/tv_ToDistance"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="100dp">
    </Spinner>

    <Button
        android:id="@+id/btn_CalculateDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:layout_below="@id/spinner_DistanceTo"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
