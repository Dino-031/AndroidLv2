<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_TemperatureRootLayout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dino.lv2.activity_TemperatureConvert"
    android:background="@color/colorRed">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="TEMPERATURE CONVERSION"
        android:textColor="@color/colorWhite"
        />
    <TextView
        android:id="@+id/tvFromTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FROM"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="160dp"
        />

    <Spinner
        android:id="@+id/spinner_TemperatureFrom"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_below="@id/tvFromTemp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="100dp">
    </Spinner>

    <EditText
        android:id="@+id/et_temperatureValue"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:hint="Enter value..."
        android:layout_below="@id/spinner_TemperatureFrom"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tvToTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TO"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="170dp"
        android:layout_below="@id/et_temperatureValue"
        />

    <Spinner
        android:id="@+id/spinner_TemperatureTo"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_below="@id/tvToTemp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="100dp">
    </Spinner>

    <Button
        android:id="@+id/btn_Calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:layout_below="@id/spinner_TemperatureTo"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>
